{
  "name": "cloud-doc",
  "version": "0.1.0",
  "main": "main.js",
  "author": {
    "name": "wayne"
  },
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.22",
    "@fortawesome/free-brands-svg-icons": "^5.10.2",
    "@fortawesome/free-solid-svg-icons": "^5.10.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "axios": "^0.21.1",
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "electron-store": "^4.0.0",
    "node-sass": "^4.12.0",
    "qiniu": "^7.2.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.1",
    "react-simplemde-editor": "^4.1.0",
    "uuid": "^3.3.3",
    "electron-is-dev": "^1.1.0"
  },
  "build":{
     "appId":"cloundDoc",
     "productName":"七牛云文档",
     "copyright":"Copyright @ 2019 wayne",
     "extends":null,
     "directories": { 
      "output": "build"
    }, 
    "nsis": {
      "oneClick": false, 
      "allowElevation": true, 
      "allowToChangeInstallationDirectory": true, 
      "installerIcon": "./build/icon.ico",
      "uninstallerIcon": "./build/icon.ico",
      "installerHeaderIcon": "./build/icon.ico",
      "createDesktopShortcut": true, 
      "createStartMenuShortcut": true,
      "shortcutName": "七牛云文档"
    },
    "files": [
      "./index.html",
      "node_modules/**/*",
      "settings/**/*",
      "./main.js",
      "./package.json",
      "build/**/*",
      "./src/menuTemplate.js",
      "./src/AppWindow.js",
      "./src/utils/QiniuManager.js"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis","zip"]
    }
  },
  "homepage":"./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack":"electron-builder --dir",
    "dist":"electron-builder --win --x64",
    "predist":"npm run build",
    "ele": "electron .",
    "onlyEle": "nodemon --watch main.js --watch src/menuTemplate.js --exec \"electron .\"",
    "dev": "concurrently \"wait-on http://localhost:3000 && nodemon --watch main.js --exec electron .\" \"cross-env BROWSER=none npm start\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron-builder": "^22.1.0",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "devtron": "^1.4.0",
    "electron": "^6.0.7",
    "nodemon": "^1.19.2",
    "wait-on": "^3.3.0"
  }
}
